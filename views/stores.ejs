<h1>Stores</h1>

<style>
    table, th, td {
      border:1px solid black;
    }
</style>

<a href="/stores/add">Add Store</a>
<table style="width: 50%">
    <!-- Titles -->
    <tr>
        <th>SID</th>
        <th>Location</th>
        <th>Manager ID</th>
        <th>Action</th>
    </tr>
    <!-- Table Entries. For every Store in the SQL DB, add a new row with the info of that store -->
    <% allStores.forEach((res) => { %>
        <tr>
            <td><%= res.sid %></td>
            <td><%= res.location %></td>
            <td><%= res.mgrid %></td>
            <td><a href="/stores/edit">Update</td>
        </tr>
    <% }) %>
</table>

<!-- Return to home page-->
<a href="/">Home</a>