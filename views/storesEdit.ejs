<h1>Edit Store</h1>

<form action="/stores/edit/:sid" method="POST">

    <!-- Store ID -->
    <label>Store ID</label>
    <input type="text" id="sid" name="sid" required minlength="5" maxlength="5" readonly value="<%= sid %>"/>
    <br/>
    <!-- Location -->
    <label>Location</label>
    <input type="text" id="location" name="location" required minlength="1"/>
    <br/>
    <!-- Manager ID -->
    <label>Manager ID</label>
    <input type="text" id="mgrid" name="mgrid" required/>
    <br/>
    <button type="submit">Apply Changes</button>
</form>

<!--Return to the Store Page-->
<a href="/stores">Cancel</a>